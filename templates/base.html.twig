<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Second Brain{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% block styles %}{% endblock %}
</head>
<body>
<header class="site-header">
    <nav class="toolbar">
        <a href="{{ path('app_home') }}">Accueil</a>
        {% if app.user %}
            <a href="{{ path('app_dashboard') }}">Dashboard</a>
            <a href="{{ path('app_finance') }}">Finances</a>
            <a href="{{ path('app_recipes') }}">Recettes</a>
            <a href="{{ path('app_courses') }}">Cours</a>
            <a href="{{ path('app_shopping') }}">Liste de course</a>
            <span class="muted" style="margin-left:auto">{{ app.user.email }}</span>
            <a href="{{ path('app_logout') }}">Se d√©connecter</a>
        {% else %}
            <span style="flex:1"></span>
            <a href="{{ path('app_login') }}">Connexion</a>
            <a class="btn btn-primary" href="{{ path('app_register') }}">Inscription</a>
        {% endif %}
    </nav>
</header>
<main>
    {% block body %}{% endblock %}
</main>
{% block scripts %}{% endblock %}
</body>
</html>
